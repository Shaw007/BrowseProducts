<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_marginTop="12dp"
    android:padding="12dp"
    >
    <TextView
        android:id="@+id/txtItemType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/grey_dark_sign_in_up_edt"
        android:textSize="@dimen/txt_list_item_useful_resource_name_size"
        android:fontFamily="@font/titilliu_web_semi_bold"
        android:layout_marginBottom="1dp"
        />
    <TextView
        android:id="@+id/txtItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/grey_dark_sign_in_up_edt"
        android:textSize="@dimen/txt_list_item_useful_resource_name_size"
        android:layout_marginBottom="1dp"
        />
    <TextView
        android:id="@+id/txtItemUrl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/grey_dark_sign_in_up_edt"
        android:textSize="@dimen/txt_list_item_useful_resource_name_size"
        />
</LinearLayout>