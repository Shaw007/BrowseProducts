<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    >
    <ImageView
        android:id="@+id/imgProductImage"
        android:layout_width="@dimen/img_product_list_item_vendor_width"
        android:layout_height="@dimen/img_product_list_item_vendor_height"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_toRightOf="@+id/imgProductImage"
        android:layout_centerVertical="true"
        android:layout_marginLeft="18dp"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="3"
            >
            <TextView
                android:id="@+id/txtProductName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txt_list_item_vendor_product_name_size"
                android:layout_marginBottom="10dp"
                />
            <TextView
                android:id="@+id/txtProductQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txt_list_item_vendor_product_price_size"
                android:layout_marginBottom="10dp"
                />
            <TextView
                android:id="@+id/txtProductPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txt_list_item_vendor_product_price_size"
                android:layout_marginBottom="10dp"
                />
            <TextView
                android:id="@+id/txtProductDiscountedPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txt_list_item_vendor_product_price_size"
                />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >
            <Button
                android:id="@+id/btnDeleteItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/futura_semi_bold_1"
                android:text="@string/delete_item"
                android:textAllCaps="false"
                android:textSize="@dimen/btn_sign_in_up_text_size"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>












