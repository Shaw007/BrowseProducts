<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_light_bg"
    tools:context=".ui.useful_resources.UsefulResourcesFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/btnAddLink"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/add_link"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:textSize="@dimen/btn_sign_in_up_text_size"
                android:background="@drawable/bg_sign_in_up_btn"
                android:fontFamily="@font/titilliu_web_semi_bold"
                />
            <View
                android:layout_width="20dp"
                android:layout_height="1dp"/>
            <Button
                android:id="@+id/btnAddPDF"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/add_pdf"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:textSize="@dimen/btn_sign_in_up_text_size"
                android:background="@drawable/bg_sign_in_up_btn"
                android:fontFamily="@font/titilliu_web_semi_bold"
                />
        </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewUsefulResources"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/grey_light_bg"
                />
            <include layout="@layout/layout_no_data_found" />
        </FrameLayout>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>










