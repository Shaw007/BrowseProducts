<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="12dp"
    >

    <TextView
        android:id="@+id/txtOrderNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/txt_list_item_vendor_product_name_size"
        android:layout_marginBottom="10dp"
        />
    <TextView
        android:id="@+id/txtTotalOrderAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/txt_list_item_vendor_product_name_size"
        android:layout_marginBottom="10dp"
        />
    <TextView
        android:id="@+id/txtProductsQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/txt_list_item_vendor_product_name_size"
        android:layout_marginBottom="10dp"
        />
    <TextView
        android:id="@+id/txtIsDispatched"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/txt_list_item_vendor_product_name_size"
        android:layout_marginBottom="10dp"
        />
    <TextView
        android:id="@+id/txtDeliveryDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/txt_list_item_vendor_product_name_size"
        android:layout_marginBottom="10dp"
        />

</LinearLayout>