<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    >
    <ImageView
        android:id="@+id/imgProductImage"
        android:layout_width="match_parent"
        android:layout_height="@dimen/img_product_list_item_customer_height"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="8dp"
        >
        <TextView
            android:id="@+id/txtProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txt_list_item_vendor_product_name_size"
            android:textColor="@color/grey_dark_sign_in_up_edt"
            />
        <TextView
            android:id="@+id/txtProductPriceNew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txt_list_item_vendor_product_new_price_size"
            android:textColor="@color/orange_dark"
            android:fontFamily="@font/titilliu_web_semi_bold"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/txtProductPriceOld"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txt_list_item_vendor_product_old_price_size"
                android:textColor="@color/grey_dark_sign_in_up_edt_hint"
                android:layout_marginRight="3dp"
                />
            <TextView
                android:id="@+id/txtDiscountPercent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txt_list_item_vendor_product_old_price_size"
                android:textColor="@color/grey_dark_sign_in_up_edt_hint"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>












