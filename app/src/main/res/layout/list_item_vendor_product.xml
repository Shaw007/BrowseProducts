<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <ImageView
        android:id="@+id/imgProductImage"
        android:layout_width="@dimen/img_product_list_item_vendor_width"
        android:layout_height="@dimen/img_product_list_item_vendor_height"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/imgProductImage"
        android:layout_centerVertical="true"
        android:layout_marginLeft="18dp"
        >
        <TextView
            android:id="@+id/txtProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txt_list_item_vendor_product_name_size"
            android:layout_marginBottom="10dp"
            />
        <TextView
            android:id="@+id/txtProductPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txt_list_item_vendor_product_price_size"
            />
    </LinearLayout>
</RelativeLayout>












