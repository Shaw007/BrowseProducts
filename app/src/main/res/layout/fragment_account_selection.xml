<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".ui.account_selection.AccountSelectionFragment">

    <Button
        android:id="@+id/btnVendor"
        android:layout_width="@dimen/btn_account_selection_width"
        android:layout_height="wrap_content"
        android:text="@string/vendor"
        android:textSize="@dimen/btn_account_selection_text_size"
        android:textAllCaps="false"
        android:fontFamily="@font/futura_semi_bold_1"
        />
    <Button
        android:id="@+id/btnCustomer"
        android:layout_width="@dimen/btn_account_selection_width"
        android:layout_height="wrap_content"
        android:text="@string/customer"
        android:textSize="@dimen/btn_account_selection_text_size"
        android:textAllCaps="false"
        android:fontFamily="@font/futura_semi_bold_1"
        android:layout_marginTop="10dp"
        />

</LinearLayout>