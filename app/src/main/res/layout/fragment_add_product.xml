<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.vendor.add_product.AddProductFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >
            <ImageView
                android:id="@+id/imgAddProductImage"
                android:layout_width="@dimen/img_add_product_width"
                android:layout_height="@dimen/img_add_product_height"
                android:src="@android:drawable/btn_plus"
                />
            <EditText
                android:id="@+id/edtProductName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:imeOptions="actionNext"
                android:textSize="@dimen/edt_add_product_text_size"
                android:hint="@string/product_name"
                android:maxLength="50"
                style="@style/EditTextAddProduct"
                android:layout_marginBottom="@dimen/edt_sign_in_up_bottom_margin"
                />
            <EditText
                android:id="@+id/edtProductDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:imeOptions="actionNext"
                android:textSize="@dimen/edt_add_product_text_size"
                android:hint="@string/product_desc"
                style="@style/EditTextAddProduct"
                android:layout_marginBottom="@dimen/edt_sign_in_up_bottom_margin"
                />
            <EditText
                android:id="@+id/edtProductPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:imeOptions="actionDone"
                android:textSize="@dimen/edt_add_product_text_size"
                android:hint="@string/product_price"
                android:maxLength="35"
                style="@style/EditTextAddProduct"
                android:layout_marginBottom="@dimen/edt_sign_in_up_bottom_margin"
                />
            <Button
                android:id="@+id/btnAddProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_product"
                android:textAllCaps="false"
                android:textSize="@dimen/btn_sign_in_up_text_size"
                android:fontFamily="@font/futura_semi_bold_1"
                />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</FrameLayout>
















